<div class="icon__container">
    {{#each data}}
    <div class="icon__container-item">
        <svg class="small option__icon" data-id="scaler">
            <use xlink:href="/img/sprite.svg#{{icon}}" id="media-icon"></use>
        </svg>
        <h2>{{title}}</h2>
        <p class="hide-element" data-id="hidden-element">
            {{description}}
        </p>
    </div>
    {{/each}}
</div>

<div class="hide-icon icon__container-item-bottom">
    <svg class="small option__icon" data-id="scaler">
        <use xlink:href="/img/sprite.svg#icon-profile-male" id="media-icon"></use>
    </svg>
    <h2>In-depth intro</h2>
    <p class="hide-element" data-id="hidden-element">
        Provide a more detailed introduction so hiring managers can get a better understanding of who you are                  
    </p>
</div>